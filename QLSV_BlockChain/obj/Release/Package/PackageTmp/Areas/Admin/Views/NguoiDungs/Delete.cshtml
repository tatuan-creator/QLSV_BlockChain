@model QLSV_BlockChain.Models.NguoiDung
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Vô hiệu hóa người dùng</h2>

<h3>Có chắc chắn vô hiệu hóa người dùng này? Sau khi vô hiệu hóa người dùng sẽ không thể đăng nhập</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Vai trò")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VaiTro.TenVaiTro)
        </dd>

        <dt>
            @Html.Label("Tên tài khoản")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TaiKhoan)
        </dd>
        <dt>
            @Html.Label("Mô tả")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Mota)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xác nhận" class="btn btn-danger" />
        </div>
    }
</div>
