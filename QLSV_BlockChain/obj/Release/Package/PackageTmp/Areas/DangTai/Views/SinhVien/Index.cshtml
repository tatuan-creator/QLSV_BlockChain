@model IEnumerable<QLSV_BlockChain.Models.SinhVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/DangTai/Views/Shared/_layoutDangTai.cshtml";
}

<h2>Quản lý sinh viên</h2>

<p>
    <button class="btn-info"> @Html.ActionLink("Thêm mới", "Create", new { }, new { @style = "color:white;" }) </button>
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.Label("Tên")
        </th>

        <th>
            @Html.Label("Lớp")
        </th>

        <th>
            @Html.Label("Ngày sinh")
        </th>

        <th>
            @Html.Label("Khoa/Viện")
        </th>
        <th>
            @Html.Label("Trạng Thái")
        </th>

        <th>
            @Html.Label("Tác vụ")

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenSinhVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lop)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KhoaVien1.TenKhoa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusSinhVien.TenTrangThai)
            </td>
            <td>
                <button class="btn btn-success">
                    @Html.ActionLink("Sửa", "Edit", new { id = item.IDSinhVien }, new { @style = "color:white;" })
                </button>
                <button class="btn btn-danger">
                    @Html.ActionLink("Xóa", "Delete", new { id = item.IDSinhVien }, new { @style = "color:white;" })
                </button>
            </td>
        </tr>
    }

</table>

