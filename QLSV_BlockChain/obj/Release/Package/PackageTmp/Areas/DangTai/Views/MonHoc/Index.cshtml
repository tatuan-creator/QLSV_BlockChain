@model IEnumerable<QLSV_BlockChain.Models.MonHoc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/DangTai/Views/Shared/_layoutDangTai.cshtml";
}

<br />

<h2>Quản lý môn học</h2>

<p>
    <button class="btn-info"> @Html.ActionLink("Thêm mới", "Create", new { }, new { @style = "color:white;" }) </button>
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.Label("Mã môn học")
        </th>

        <th>
            @Html.Label("Tên môn học")
        </th>

        <th>
            @Html.Label("Tác vụ")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaMonHoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenMonHoc)
            </td>
            <td>
                <button class="btn btn-success">
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaMonHoc }, new { @style = "color:white;" })
                </button>
                <button class="btn btn-danger">
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaMonHoc }, new { @style = "color:white;" })
                </button>
            </td>
        </tr>
    }

</table>