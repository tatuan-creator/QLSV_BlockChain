@model IEnumerable<QLSV_BlockChain.Models.VaiTro>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<br />

<h2>Quản lý vai trò</h2>

<p>
    <button class="btn-info"> @Html.ActionLink("Thêm mới", "Create", new { }, new { @style = "color:white;" }) </button>
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.Label("Tên vai trò")
        </th>
        <th>
            @Html.Label("Mô tả vai trò")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenVaiTro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thongtinkhoa)
            </td>
        </tr>
    }

</table>

