@model QLSV_BlockChain.Models.MonHoc

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/DangTai/Views/Shared/_layoutDangTai.cshtml";
}
<br />
<h2>Chỉnh sửa môn học</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaMonHoc)

        <div class="form-group">
            @Html.LabelFor(model => model.TenMonHoc,"Tên môn học", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenMonHoc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenMonHoc, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Chỉnh sửa" class="btn btn-primary" />
            </div>
        </div>
    </div>
}